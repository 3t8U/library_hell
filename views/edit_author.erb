<h1>Update "<%= @author.name() %>"</h1>

<form action="/authors/<%= @author.id() %>" method="post">
  <input name="_method" type="hidden" value="patch">

  <label for="name">Rename author</label>
  <input id="name" name="name" type="text" placeholder="<%= @author.name %>">
  <label for="book_name">Add book</label>
  <input id="book_name" name="book_name" type="text">
  <button type="submit">Update</button>
</form>

<form action="/authors/<%= @author.id() %>" method="post">
  <input name="_method" type="hidden" value="delete">

  <button type="submit">Delete author</button>
</form>
<p><a href="/authors">Return to author list</a></p>
