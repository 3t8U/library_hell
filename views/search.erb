<h3>Current Catalog:</h3>
<% if @books %>
  <ul>
    <% @books.each do |book| %>
      <li><a href="/books/<%= book.id %>"><%= book.name %></a></li>
    <% end %>
  </ul>
<% else %>
  <p>There are currently no books to display.</p>
<% end %>


<form action="/books/search" method="post">
  <div class="form-group">
    <label for="name">Search Name</label>
    <input id="search" name="name" class="form-control" type="text">
    <label for="genre">Search Genre</label>
    <input id="search" name="genre" class="form-control" type="text">
  </div>
  <button type="submit" class="btn">Search</button>
</form>

